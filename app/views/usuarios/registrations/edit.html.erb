<div class="columns is-centered">
  <div class="column is-half">
    <div class="box has-background-light">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "usuarios/shared/error_messages", resource: resource %>
        <h1 class="title has-text-centered"> Configuración de cuenta </h1>
        <div class = field>
          <%= f.label :nombre, class: "label" %>
          <div class="control has-icons-left">
            <%= f.text_field :nombre, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fa fa-user"></i>
            </span>
          </div>
        </div>

       <div class = field>
          <%= f.label :imagen_perfil, class: "label" %>
          <div class="control has-icons-left">
            <%= f.text_field :imagen_perfil, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-camera"></i>
            </span>
          </div>
        </div>

        <div class = field>
          <%= f.label :telefono, class: "label" %>
          <div class="control has-icons-left">
            <%= f.text_field :telefono, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-phone"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control has-icons-left has-icons-right">
            <%= f.email_field :email, autocomplete: "email", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

          <div class="field">
            <%= f.label :new_password, class: "label" %> <i>(Leave blank if you don't want to change it)</i> 
            <div class="control has-icons-left">
              <%= f.password_field :password, placeholder: "6 caracteres mínimo",autocomplete: "new-password", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
            </div>
          </div>

       <div class="field">
          <%= f.label :new_password_confirmation, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <div class="field">
            <%= f.label :current_password, class: "label" %> <i>(We need your current password to confirm your changes)</i><br />
            <div class="control has-icons-left">
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
            </div>
        </div>

        <div class="field">
          <%= f.submit "Update", class: "button is-dark mb-3" %>
        </div>
      <% end %>

      <div class="field">
        <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "¿Estás segur@ que quieres eliminar tu cuenta?" }, method: :delete, class: "button is-danger is-outlined is-responsive" %> 
      </div>
    </div>
  </div>
</div>

