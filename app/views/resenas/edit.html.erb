
<div class="columns is-centered">
  <div class="column is-half">
    <div class="box has-background-light">
      <h2 class="subtitle has-text-centered"> Editar Rese√±a </h2>
      <%= form_with model: [@cancha, @resena] do |form| %>
            <div class = "field" >
              <%= form.label :calificacion, class: "label" %>
              <div class="select">
                <%= form.select :calificacion, [1, 2, 3, 4, 5, 6, 7], class:"form-select" %>
              </div>
            </div>
            <div class = "field" >
              <%= form.label :contenido, class: "label" %>
              <div class="control">
                <%= form.text_field :contenido, class: "input" %>
              </div>
            </div>
        <div class = "field mb-3" >
          <%= form.submit "Editar", class: "button is-dark" %>
        </div>
      <% end %>
   </div>
  </div>
</div>

  <div class="field has-text-centered">
    <%= link_to 'Volver', cancha_path(@resena.cancha_id), class: "button is-light" %>
  </div>